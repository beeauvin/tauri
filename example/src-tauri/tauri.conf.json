{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "gleaming",
  "version": "0.1.0",
  "identifier": "com.tauri.gleaming",
  "build": {
    "devUrl": "http://localhost:1234",
    "beforeDevCommand": "gleam run -m lustre/dev start",
    "frontendDist": "../dist",
    "beforeBuildCommand": "gleam run -m build & gleam run -m lustre/dev build app --minify --outdir=./dist"
  },
  "app": {
    "withGlobalTauri": false,
    "windows": [
      {
        "title": "gleaming",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
